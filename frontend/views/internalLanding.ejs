                <div>
                    <div class="page-title">Admin Dashboard</div>
                    <div class="page-subtitle">Quick overview of events and operations</div>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-light" onclick="location.href='/eventRecords'">
                        <i class="fas fa-calendar-alt"></i> Manage Events
                    </button>
                    <button class="btn btn-light" onclick="location.href='/volunteerRecords'">
                        <i class="fas fa-users"></i> Manage Volunteers
                    </button>
                    <button class="btn btn-light" onclick="location.href='/adminRecords'">
                        <i class="fas fa-user-cog"></i> Manage Admins
                    </button>
                    <button class="btn btn-dark" data-toggle="modal" data-target="#sendEmailModal">
                        <i class="fas fa-envelope"></i> Send Mass Email
                    </button>
                </div>
            </div>
        </div>
        <!-- Event Status Overview -->
        <div class="info-card-container">
            <div class="info-card bg-pending">
                <h3>Pending Events</h3>
                <p><%= statusCounts.pending || 0 %></p>
            </div>
            <div class="info-card bg-approved">
                <h3>Approved Events</h3>
                <p><%= statusCounts.approved || 0 %></p>
            </div>
            <div class="info-card bg-planned">
                <h3>Planned Events</h3>
                <p><%= statusCounts.planned || 0 %></p>
            </div>
            <div class="info-card bg-completed">
                <h3>Completed Events</h3>
