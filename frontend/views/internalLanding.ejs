        .bg-pending { background-color: #d69e2e; }
        .bg-approved { background-color: #38a169; }
        .bg-planned { background-color: #2b6cb0; }
        .bg-completed { background-color: #4a5568; }
        .info-card h3 {
            font-size: 14px;
            margin: 0 0 6px 0;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            opacity: 0.9;
        }
        .info-card p {
            font-size: 28px;
            font-weight: 800;
            margin: 0;
        }
        .section-card .card-header {
            background: #ffffff;
            border-bottom: 1px solid #edf2f7;
        }
        .table-container .table {
