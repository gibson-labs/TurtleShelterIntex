    <!-- Planned Events Table -->
    <div class="table-container">
        <div class="card section-card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <div>
                    <strong>Planned Events</strong>
                    <div class="text-muted small">Upcoming and approved events</div>
                </div>
                <a class="btn btn-outline-dark btn-sm" href="/eventRecords"><i class="fas fa-list"></i> View All</a>
            </div>
            <div class="table-responsive" style="max-height: 420px; overflow-y: auto;">
            <table class="table table-hover align-middle mb-0 table-stacked">
                <thead class="thead-dark" style="position: sticky; top: 0; z-index: 1; background-color: #343a40; color: #fff;">
                    <tr>
                        <th>Event Status</th>
                        <th>Event Date</th>
                        <th>Start Time</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zip</th>
                        <th>Contact Name</th>
                        <th>Event Activities</th>
                        <th>Organization</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% if (events && events.length > 0) { %>
                        <% events.forEach(function(event, index) { %> <!-- Added index for unique modal IDs -->
                            <tr>
                                <td data-label="Status"><%= event.eventstatus %></td>
                                <td data-label="Date"><%= event.eventdate ? new Date(event.eventdate).toISOString().split('T')[0] : (event.startdaterange ? new Date(event.startdaterange).toISOString().split('T')[0] : 'N/A') %></td>
                                <td data-label="Start"><%= event.starttime || 'N/A' %></td>
                                <td data-label="City"><%= event.city || 'N/A' %></td>
                                <td data-label="State"><%= event.state || 'N/A' %></td>
                                <td data-label="Zip"><%= event.zip || 'N/A' %></td>
                                <td data-label="Contact">
                                    <% if (event.contactname) { %>
                                        <button class="btn btn-link" data-toggle="modal" data-target="#contactModal<%= index %>">
                                            <%= event.contactname %>
                                        </button>
    
                                        <!-- Modal -->
                                        <div class="modal fade" id="contactModal<%= index %>" tabindex="-1" aria-labelledby="contactModalLabel<%= index %>" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="contactModalLabel<%= index %>">Contact Info</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p><strong>Name:</strong> <%= event.contactname || 'N/A' %></p>
                                                        <p><strong>Email:</strong> <%= event.contactemail || 'N/A' %></p>
                                                        <p><strong>Phone:</strong> <%= event.contactphone || 'N/A' %></p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td><%= event.eventactivities || 'N/A' %></td>
                                <td><%= event.organization || 'N/A' %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="9" class="text-center text-muted">No planned events available.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS and Chart.js -->
